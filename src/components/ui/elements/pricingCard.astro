---
interface ServiceCardProps {
  title?: string;
  price?: string;
  description?: string;
  features?: string[];
}

const {
  title = "Null",
  price = "0",
  description = "No description",
  features = [],
}: ServiceCardProps = Astro.props;
---
<div class="w-full h-full flex items-center">
  <div class="w-full h-full relative flex flex-col rounded-3xl bg-white p-8 shadow-2xl ring-1 ring-gray-900/10 sm:p-10">
    <h3 id="tier-personal" class="text-xl font-semibold text-dorado-600">{title}</h3>
    <p class="mt-4 flex items-baseline gap-x-2">
      <span class="text-5xl font-extrabold text-negro-500">{price}</span>
      <span class="">99</span>
      <span class="text-base text-gray-500">â‚¬</span>
    </p>
    <p class="mt-6 text-md text-gray-600">{description}</p>
    <ul role="list" class="mt-8 space-y-3 text-lg text-gray-600 sm:mt-4">
      {features.map((feature: string) => (
        <li class="flex gap-x-3">
          <svg class="h-6 w-5 flex-none text-dorado-600" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
          </svg>
          {feature}
        </li>
      ))}
    </ul>
    <div class="mt-auto">
      <a href="#" aria-label="" aria-describedby="tier-personal" class="block rounded-md bg-dorado-600 px-4 py-2 text-center text-lg font-semibold text-white shadow hover:bg-dorado-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-dorado-600">
        Solicitar este servicio
      </a>
    </div>
  </div>
</div>